" autocommands {{{

" return to same line after reopenning file
augroup line_return
	au!
	au BufReadPost *
		\ if line("'\"") > 0 && line("'\"") <= line("$") |
		\		execute 'normal! g`"zvzz' |
		\ endif
augroup END

" automatically resize splits when resizing window
augroup split_resize
	au!
	au VimResized * wincmd =
augroup END

" set proper syntaxes
augroup syntaxes
	au!

	au BufNewFile,BufRead *.mm set filetype=objc
	au BufNewFile,BufRead *.tpl let b:jst_subtype='html'
	au BufNewFile,BufRead *.tpl set filetype=jst

	au BufNewFile,BufRead ~/Dropbox/Notes/* setlocal filetype=markdown

	au FileType int-node setlocal filetype=javascript
	au FileType int-lein setlocal filetype=clojure
augroup END

" custom settings based on filetype
augroup ft_settings
	au!

  au FileType javascript call JavaScriptFold()
	au FileType coffee setlocal shiftwidth=2 expandtab
	au FileType vim setlocal foldmethod=marker foldlevel=0
augroup END

" no numbers based on file types
augroup nonumbers
	au!

	au FileType vimfiler setlocal nonumber
	au FileType vimshell setlocal nonumber
	au FileType int-node setlocal nonumber
	au FileType int-lein setlocal nonumber
	au FileType text     setlocal nonumber
	au FileType markdown setlocal nonumber
augroup END

