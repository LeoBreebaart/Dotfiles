" window title {{{

" set nice window title
function! DirPath()
  let l:splited=split(expand("%:p"), "/")
  let l:cut=3

  if len(l:splited) < l:cut
    let cut=len(l:splited)
  endif

  let l:cut=-l:cut

  if len(l:splited) == 0
    return "[No Name]"
  else
    return join(l:splited[l:cut : -1], "/")
  endif
endfunction

function! WindowTitle()
  return "vim: " . DirPath()
endfunction

" set title on start as simple "vim"
