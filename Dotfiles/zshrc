# # fake prompt when loading
# printf "~ > "

# load files
files=(
  options
  path
  terminfo
  colors
  completion
  vim
  prompt
  locale
  exports
  aliases
  functions
  fzf
  history
  bindkeys
  terminal
  plugins
  # locale
  # rbenv
)

for file in $files; do
  source ~/.zsh/$file.zsh
done

if [ "$(uname)" = "Darwin" ]; then
  source ~/.zsh/nvm.zsh
  source ~/.zsh/darwin.zsh;
fi

if [ "$(uname)" = "Linux" ]; then
  source ~/.zsh/linux.zsh;
fi

if [ -d ~/Documents/Dropbox/Notes ]; then
  source ~/.zsh/notes.zsh
fi

# # clear after ready
# clear
