if has("gui_macvim")
	" disable scrollbar
	set guioptions-=r
	set go-=L

	" font
	set guifont=Consolas:h12

	" turn off blinking cursor
	set gcr=n:blinkon0

	" theme
	colorscheme Tomorrow-Mine

	" default window size
	set lines=68 columns=150

	" always show tabs
	set showtabline=2

	" cmd-p for unit eplugin
	macmenu &File.Print key=<nop>
	map <D-p> :Unite -buffer-name=files -start-insert file_rec/async<cr>

	" comment lines with cmd-/
	map <D-/> :TComment<cr>
	vmap <D-/> :TComment<cr>gv
endif

